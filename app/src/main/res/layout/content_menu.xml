<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.galihpw.smartbookandroid.MenuActivity"
    tools:showIn="@layout/activity_menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/kompetensiDasar"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/kompetensiDasarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bgButton"
                android:fontFamily="cursive"
                android:text="Kompetensi Dasar"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/petaKonsep"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/petaKonsepImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bgButton"
                android:fontFamily="cursive"
                android:text="Peta Konsep"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/materiListrikStatis"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/materiListrikStatisImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bgButton"
                android:fontFamily="cursive"
                android:text="Materi Listrik Statis"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/latihanSoal"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/latihanSoalImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bgButton"
                android:fontFamily="cursive"
                android:text="Latihan Soal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tentang"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/tentangImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/bgButton"
                android:fontFamily="cursive"
                android:text="Tentang"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
